<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.PrincipalFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->

        <EditText
            android:id="@+id/edit_text_pesquisar"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Procure por livros, artigos e mt+"
            android:inputType="text" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/botao_pesquisar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:backgroundTint="@android:color/black"
            android:clickable="true"
            android:src="@drawable/ic_search_black_24dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view_livros"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/edit_text_pesquisar"
            android:layout_marginTop="97dp" />
    </RelativeLayout>
</FrameLayout>